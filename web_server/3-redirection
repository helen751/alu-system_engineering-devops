#!/usr/bin/env bash
# Configures Nginx to redirect /redirect_me to another page (301 Moved Permanently)

apt-get update -y
apt-get install -y nginx

# Ensure redirect block exists inside the default server
# This adds the location block before the closing "}" of the first server block
sed -i '/^\s*}$/i \    location /redirect_me {\n        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n    }' /etc/nginx/sites-available/default

# Restart nginx to apply the configuration
service nginx restart
