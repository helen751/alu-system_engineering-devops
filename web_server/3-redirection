#!/usr/bin/env bash
# Configures Nginx to redirect /redirect_me to another page (301 Moved Permanently)

# Update package lists and install nginx
apt-get update -y
apt-get install -y nginx

# Configure the redirection
# Replace the default location block to include a 301 redirect
sed -i 's@location / {@location / {\n\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;@' /etc/nginx/sites-available/default

# Restart nginx service to apply changes
service nginx restart
