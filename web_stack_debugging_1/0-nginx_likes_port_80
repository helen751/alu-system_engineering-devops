#!/usr/bin/env bash
# Fix Nginx so it listens on port 80

apt-get update -y
apt-get install -y nginx

# Kill only nginx worker and master processes (Shellcheck-safe)
pgrep -f "nginx: master process" | xargs -r kill -9
pgrep -f "nginx: worker process" | xargs -r kill -9

rm -f /var/run/nginx.pid
service nginx start
