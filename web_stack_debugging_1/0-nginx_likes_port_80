#!/usr/bin/env bash
# Fix Nginx to listen on port 80 on Ubuntu container

apt-get update -y
apt-get install -y nginx

# Remove stale PID file (common cause of failure)
rm -f /var/run/nginx.pid

# Ensure nothing else is blocking port 80
fuser -k 80/tcp 2>/dev/null

# Start nginx in foreground-compatible mode
service nginx restart
